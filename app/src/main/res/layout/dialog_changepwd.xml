<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:layout_height="350dp">

    <TextView
        android:textColor="@color/white"
        android:background="@color/blue"
        android:gravity="center"
        android:text="修改密码"
        android:textSize="@dimen/normalTextSize"
        android:layout_width="500dp"
        android:layout_height="60dp" />
    <EditText
        android:id="@+id/et_oldpwd_dialog_changepwd"
        android:inputType="numberPassword"
        android:hint="请输入原始密码"
        android:layout_width="500dp"
        android:layout_height="70dp" />
    <EditText
        android:id="@+id/et_newpwd_dialog_changepwd"
        android:inputType="numberPassword"
        android:hint="请输入新密码"
        android:layout_width="500dp"
        android:layout_height="70dp" />
    <EditText
        android:id="@+id/et_newpwd_again_dialog_changepwd"
        android:inputType="numberPassword"
        android:hint="请再次输入新密码"
        android:layout_width="500dp"
        android:layout_height="70dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="500dp"
        android:layout_height="70dp">
        <TextView
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@color/red"
            android:gravity="center"
            android:id="@+id/tv_cancel_dialog_changepwd"
            android:text="取消"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/tv_ok_dialog_changepwd"
            android:text="确认"
            android:textColor="@color/white"
            android:background="@color/lightGreen"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
